#!/bin/bash
set -e

VENV_DIR="/usr/share/fim-daemon/venv"
REQUIREMENTS_FILE="/usr/share/fim-daemon/requirements.txt"

case "$1" in
    configure)
        echo "Setting up FIM daemon..."
        
        # Create necessary directories
        mkdir -p /var/log/fim-daemon
        mkdir -p /var/lib/fim-daemon/watch-folder
        mkdir -p /var/run/fim-daemon
        mkdir -p /etc/fim-daemon
        
        # Create virtual environment
        python3 -m venv "$VENV_DIR"
        
        # Install dependencies
        if [ -f "$REQUIREMENTS_FILE" ]; then
            "$VENV_DIR/bin/pip" install -r "$REQUIREMENTS_FILE"
        fi
        
        # Update shebang in main script to use venv Python
        sed -i '1s|.*|#!/usr/share/fim-daemon/venv/bin/python3|' /usr/bin/fim-daemon
        
        # Set proper permissions
        chown -R root:root "$VENV_DIR"
        chmod -R 755 "$VENV_DIR"
        chown -R root:root /var/log/fim-daemon
        chown -R root:root /var/lib/fim-daemon
        chmod 755 /var/log/fim-daemon
        chmod 755 /var/lib/fim-daemon
        
        # Enable and start service
        systemctl daemon-reload
        systemctl enable fim-daemon.service
        systemctl start fim-daemon.service
        
        echo "FIM daemon setup complete."
        ;;
        
    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0